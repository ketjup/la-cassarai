{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ room.naam }}</td>
            </tr>
            <tr>
                <th>Max_personen</th>
                <td>{{ room.maxPersonen }}</td>
            </tr>
            <tr>
                <th>Aantal_bedden</th>
                <td>{{ room.aantalBedden }}</td>
            </tr>
            <tr>
                <th>Baby_bed</th>
                <td>{{ room.babyBed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room_index') }}">back to list</a>

    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
